# Domain Configuration
TRAEFIK_DOMAIN=example.com                # Your base domain
N8N_SUBDOMAIN=n8n                         # Subdomain for n8n (will result in n8n.example.com)

# Traefik ACME (Let's Encrypt) Configuration
TRAEFIK_ACME_EMAIL=your-email@example.com # Email for Let's Encrypt notifications

# Cloudflare DNS API Configuration (for DNS challenge)
CLOUDFLARE_DNS_API_TOKEN=your-cloudflare-token  # Cloudflare API token with DNS edit permissions

# PostgreSQL Configuration
POSTGRES_USER=n8n                         # PostgreSQL username
POSTGRES_PASSWORD=change-this-password    # PostgreSQL password
POSTGRES_DB=n8n                          # PostgreSQL database name

# n8n Configuration
N8N_BASIC_AUTH_USER=admin                 # Basic auth username for n8n
N8N_BASIC_AUTH_PASSWORD=change-this-password  # Basic auth password for n8n
N8N_ENCRYPTION_KEY=change-this-to-a-random-string  # At least 32 characters long
